  { name: 'President',  color: '#E91E63', icon: 'ðŸ‘”' },
];

export default function HomeScreen() {
  const router = useRouter();
  const [selectedDifficulty, setSelectedDifficulty] = useState('easy');

  const getDifficultyInfo = (value: string) => {
    return difficulties.find(d => d.value === value) || difficulties[0];
  };

  const selectedInfo = getDifficultyInfo(selectedDifficulty);

  const handleCategoryPress = (categoryName: string) => {
    const questionCount = selectedInfo.questions;
    router.push({
      pathname: '/quiz/Levels',
      params: {
        name: categoryName.toLowerCase(),
        difficulty: selectedDifficulty,
        questions: questionCount.toString(),
      },
    });
  };

  return (
    <View style={styles.container}>
      {/* Header */}
      <View style={styles.header}>
        <Text style={styles.title}>The Pursuit of Trivia</Text>
      </View>

      {/* Difficulty Selector */}
      <View style={styles.difficultySection}>
        <View style={styles.difficultyButtonsContainer}>
          {difficulties.map((diff) => (
            <TouchableOpacity
              key={diff.value}
              activeOpacity={0.8}
              style={[
                styles.difficultyButton,
                selectedDifficulty === diff.value && {
                  backgroundColor: diff.color,
                  borderColor: diff.color,
                },
              ]}
              onPress={() => setSelectedDifficulty(diff.value)}
            >
              <Text
                style={[
                  styles.difficultyButtonText,
                  selectedDifficulty === diff.value && { color: '#ffffff' },
                ]}
              >
                {diff.label}
              </Text>
            </TouchableOpacity>
          ))}
        </View>
      </View>

      {/* Categories */}
      <ScrollView
        style={styles.categoriesScroll}
        contentContainerStyle={styles.categoriesContent}
      >
        <Text style={styles.sectionTitle}>Choose Category</Text>

        <View style={styles.categoriesGrid}>
          {categories.map((category) => (
            <TouchableOpacity
              key={category.name}
              style={[styles.categoryButton, { backgroundColor: category.color }]}
              activeOpacity={0.88}
              onPress={() => handleCategoryPress(category.name)}
            >
              <Text style={styles.categoryIcon}>{category.icon}</Text>
              <Text style={styles.categoryName}>{category.name}</Text>
            </TouchableOpacity>
          ))}
        </View>
      </ScrollView>

      {/* Footer hint */}
      <View style={styles.footer}>
        <Text style={styles.footerText}>
          {selectedInfo.label} mode â€¢ Select a category to start!
        </Text>
      </View>
    </View>
  );
}

