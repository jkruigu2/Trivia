  {
    label: 'Easy',
    value: 'easy',
    questions: 10,
    color: '#4CAF50',      // green
    bgLight: '#2E7D32',
  },
  {
    label: 'Medium',
    value: 'medium',
    questions: 15,
    color: '#FF9800',      // orange
    bgLight: '#F57C00',
  },
  {
    label: 'Hard',
    value: 'hard',
    questions: 20,
    color: '#F44336',      // red
    bgLight: '#D32F2F',
  },
];

// Category list
const categories = [
  { name: 'Sports',     color: '#3F51B5', icon: 'âš½' },
  { name: 'Science',    color: '#2196F3', icon: 'ðŸ”¬' },
  { name: 'History',    color: '#F44336', icon: 'ðŸ“œ' },
